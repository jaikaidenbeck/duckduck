	function stickyMenu() {
		var scroll = $(window).scrollTop();

		if (scroll >= 50) {
	        $("#navbar-menu").addClass("scrolled");
	    } else {
	        $("#navbar-menu").removeClass("scrolled");
	    }
	}

	stickyMenu();

	$(window).scroll(function() {  
	    stickyMenu();	    
	});
});