$( document ).ready(function() {

	function playMusic() {
		$('#music').get(0).play();

		$('#music-play').removeClass('d-inline-flex');
		$('#music-play').addClass('d-none');


		$('#music-pause').addClass('d-inline-flex');
		$('#music-pause').removeClass('d-none');
	}
	
	$('#music-play').click(function(){
		playMusic();		
	});

	$('#music-pause').click(function(){
		$('#music').get(0).pause();

		$('#music-pause').removeClass('d-inline-flex');
		$('#music-pause').addClass('d-none');


		$('#music-play').addClass('d-inline-flex');
		$('#music-play').removeClass('d-none');		
	});

